<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atiga.cakeorder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application

        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/Theme.CakeOrder"
        android:windowSoftInputMode="stateHidden"
        android:requestLegacyExternalStorage="true">
        <activity android:name=".ui.masterdata.product.ListProductFromHomeActivity"/>
        <activity android:name=".ui.report.track.detail.DetailTrackResultActivity" />
        <activity android:name=".ui.report.track.detail.DetailTrackOrderActivity" />
        <activity android:name=".ui.report.detail.DetailOrderReportActivity" />
        <activity android:name=".ui.report.detail.DetailReportActivity" />
        <activity android:name=".ui.user.detail.DetailUserActivity" />
        <activity android:name=".ui.order.edit.EditOrderActivity" />
        <activity android:name=".ui.user.add.AddUserActivity" />
        <activity android:name=".ui.order.detail.DetailOrderActivity" />
        <activity android:name=".ui.order.input.orderitem.ListOrderItemActivity" />
        <activity android:name=".ui.order.input.orderitem.EditOrderItemActivity" />
        <activity android:name=".ui.masterdata.product.AddProductActivity" />
        <activity android:name=".ui.masterdata.subcategory.EditSubCategoryActivity" />
        <activity android:name=".ui.masterdata.product.ListProductActivity" />
        <activity android:name=".ui.masterdata.subcategory.AddSubCategoryActivity" />
        <activity android:name=".ui.masterdata.category.EditCategoryActivity" />
        <activity android:name=".ui.order.input.orderitem.AddItemActivity" />
        <activity android:name=".ui.report.track.TrackOrderActivity" />
        <activity android:name=".ui.scanner.ScannerActivity" />
        <activity android:name=".ui.order.input.InputOrderActivity" />
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.CakeOrder.NoActionBar" />
    </application>

</manifest>